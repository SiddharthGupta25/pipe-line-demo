pipeline {
    agent any

    parameters {
        integer(name: 'VALUE1', defaultValue: 10, description: 'Operand 1')
        integer(name: 'VALUE2', defaultValue: 20, description: 'Operand 2')
    }


    stages {
        stage('Preparing Build') {
            steps {
                echo "[+] Preparing the build"
                script {

                    commitHash = sh(returnStdout: true, script: 'git rev-parse HEAD').trim()
                    branchName = env.BRANCH_NAME
                    currentBuild.displayName = "DT-${BUILD_NUMBER}-${commitHash.take(9)}"
                }
            }
        }

       stage('Executing Tests') {
            steps {
                echo "[+] Executing tests"
                sh "mvn clean test -B -Dvalue1=${params.VALUE1} -Dvalue2=${params.VALUE2}"
            }
        }
    }

    post {
        always {
            echo "[+] Sending Emails"

        }
    }
}
