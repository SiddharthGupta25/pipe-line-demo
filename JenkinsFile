pipeline {
    agent any

    parameters {
        string(name: 'BROWSER_NAME', defaultValue: 'chrome', description: 'Browser to use for tests')
    }

    stages {
        stage('Preparing Build') {
            steps {
                echo "[+] Preparing the build"
                script {

                    commitHash = sh(returnStdout: true, script: 'git rev-parse HEAD').trim()
                    branchName = env.BRANCH_NAME
                    currentBuild.displayName = "DT-${BUILD_NUMBER}-${commitHash.take(9)}"
                }
            }
        }

       stage('Executing Tests') {
            steps {
                echo "[+] Executing tests"
                sh "mvn clean test -B -Dbrowser=${params.BROWSER_NAME}"
            }
        }
    }

    post {
        always {
            echo "[+] Cleaning up"
            // Add cleanup steps if needed
        }
    }
}
